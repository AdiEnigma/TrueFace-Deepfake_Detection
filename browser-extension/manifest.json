{
  "manifest_version": 3,
  "name": "TrueFace - Real-time Deepfake Detection",
  "version": "1.0.0",
  "description": "Detect deepfakes in real-time during video calls using advanced AI",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://meet.google.com/*",
    "https://zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://*.webex.com/*",
    "http://localhost:8000/*"
  ],
  
  "background": {
    "service_worker": "background_fixed.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*", 
        "https://teams.microsoft.com/*",
        "https://*.webex.com/*"
      ],
      "js": ["content_real_analysis.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrueFace Controls",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
